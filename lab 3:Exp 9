#include <stdio.h>
#include <math.h>

void kClosest(int points[][2], int n, int k) {
    double dist[10];
    int i, j;

    // Calculate distance from origin
    for(i = 0; i < n; i++) {
        dist[i] = sqrt(points[i][0]*points[i][0] + points[i][1]*points[i][1]);
    }

    // Simple sorting based on distance
    for(i = 0; i < n-1; i++) {
        for(j = i+1; j < n; j++) {
            if(dist[i] > dist[j]) {
                double tempD = dist[i];
                dist[i] = dist[j];
                dist[j] = tempD;

                int tempX = points[i][0];
                int tempY = points[i][1];
                points[i][0] = points[j][0];
                points[i][1] = points[j][1];
                points[j][0] = tempX;
                points[j][1] = tempY;
            }
        }
    }

    // Print first k points
    printf("Output: ");
    for(i = 0; i < k; i++) {
        printf("[%d, %d] ", points[i][0], points[i][1]);
    }
    printf("\n");
}

int main() {

    // Test Case 1
    int points1[][2] = {{1,3},{-2,2},{5,8},{0,1}};
    int n1 = 4, k1 = 2;
    kClosest(points1, n1, k1);

    // Test Case 2
    int points2[][2] = {{1,3},{-2,2}};
    int n2 = 2, k2 = 1;
    kClosest(points2, n2, k2);

    // Test Case 3
    int points3[][2] = {{3,3},{5,-1},{-2,4}};
    int n3 = 3, k3 = 2;
    kClosest(points3, n3, k3);

    return 0;
}

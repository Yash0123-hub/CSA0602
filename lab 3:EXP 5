#include <stdio.h>

void printArray(int a[], int n) {
    for(int i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");
}

int partition(int a[], int low, int high, int n) {
    int pivot = a[low];
    int i = low + 1;
    int j = high;

    while (i <= j) {
        while (i <= high && a[i] <= pivot)
            i++;
        while (j >= low && a[j] > pivot)
            j--;

        if (i < j) {
            int temp = a[i];
            a[i] = a[j];
            a[j] = temp;
        }
    }

    // Place pivot in correct position
    int temp = a[low];
    a[low] = a[j];
    a[j] = temp;

    // Show array after partition
    printf("After partition (pivot = %d): ", pivot);
    printArray(a, n);

    return j;
}

void quickSort(int a[], int low, int high, int n) {
    if (low < high) {
        int p = partition(a, low, high, n);
        quickSort(a, low, p - 1, n);
        quickSort(a, p + 1, high, n);
    }
}

int main() {

    // Test Case 1
    int a1[] = {10,16,8,12,15,6,3,9,5};
    int n1 = 9;

    printf("Original Array (Test Case 1): ");
    printArray(a1, n1);

    quickSort(a1, 0, n1 - 1, n1);

    printf("Final Sorted Array: ");
    printArray(a1, n1);

    return 0;
}

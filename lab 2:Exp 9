#include <stdio.h>
#include <math.h>

int main() {
    int n = 4;
    float points[4][2] = {{1,2}, {4,5}, {7,8}, {3,1}};

    float minDist = 99999.0;
    int p1 = 0, p2 = 1;

    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            float dx = points[i][0] - points[j][0];
            float dy = points[i][1] - points[j][1];
            float dist = sqrt(dx*dx + dy*dy);

            if (dist < minDist) {
                minDist = dist;
                p1 = i;
                p2 = j;
            }
        }
    }

    printf("Closest pair: (%.0f, %.0f) - (%.0f, %.0f)\n",
           points[p1][0], points[p1][1], points[p2][0], points[p2][1]);
    printf("Minimum distance: %lf\n", minDist);

    return 0;
}

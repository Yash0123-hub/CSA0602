#include <stdio.h>

int main() {
    int A[] = {1, 2};
    int B[] = {-2, -1};
    int C[] = {-1, 2};
    int D[] = {0, 2};

    int nA = 2, nB = 2, nC = 2, nD = 2;
    int count = 0;

    for(int i = 0; i < nA; i++) {
        for(int j = 0; j < nB; j++) {
            for(int k = 0; k < nC; k++) {
                for(int l = 0; l < nD; l++) {
                    if (A[i] + B[j] + C[k] + D[l] == 0) {
                        count++;
                    }
                }
            }
        }
    }

    printf("Number of tuples: %d\n", count);
    return 0;
}

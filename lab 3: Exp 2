#include <stdio.h>

// Function to merge two subarrays
void merge(int arr[], int l, int m, int r) {
    int i, j, k;
    int n1 = m - l + 1;
    int n2 = r - m;

    int L[n1], R[n2];

    // Copy data
    for (i = 0; i < n1; i++)
        L[i] = arr[l + i];
    for (j = 0; j < n2; j++)
        R[j] = arr[m + 1 + j];

    i = 0; j = 0; k = l;

    // Merge the arrays
    while (i < n1 && j < n2) {
        if (L[i] <= R[j])
            arr[k++] = L[i++];
        else
            arr[k++] = R[j++];
    }

    // Copy remaining elements
    while (i < n1)
        arr[k++] = L[i++];

    while (j < n2)
        arr[k++] = R[j++];
}

// Function to perform merge sort
void mergeSort(int arr[], int l, int r) {
    if (l < r) {
        int m = l + (r - l) / 2;

        mergeSort(arr, l, m);
        mergeSort(arr, m + 1, r);

        merge(arr, l, m, r);
    }
}

// Main function
int main() {
    int i;

    // Test Case 1
    int arr1[] = {31, 23, 35, 27, 11, 21, 15, 28};
    int n1 = 8;

    mergeSort(arr1, 0, n1 - 1);

    printf("Sorted array (Test Case 1): ");
    for (i = 0; i < n1; i++)
        printf("%d ", arr1[i]);

    // Test Case 2
    int arr2[] = {22, 34, 25, 36, 43, 67, 52, 13, 65, 17};
    int n2 = 10;

    mergeSort(arr2, 0, n2 - 1);

    printf("\nSorted array (Test Case 2): ");
    for (i = 0; i < n2; i++)
        printf("%d ", arr2[i]);

    return 0;
}

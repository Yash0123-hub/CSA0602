#include <stdio.h>

int binarySearch(int a[], int n, int key, int *comparisons) {
    int low = 0, high = n - 1;

    while (low <= high) {
        (*comparisons)++;              // Count comparisons
        int mid = (low + high) / 2;

        if (a[mid] == key)
            return mid + 1;            // Position (1-based index)
        else if (a[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;
}

int main() {

    // Test Case 1
    int a[] = {5,10,15,20,25,30,35,40,45};
    int n = 9, key = 20, comparisons = 0;

    int pos = binarySearch(a, n, key, &comparisons);

    printf("Key: %d\n", key);
    printf("Position: %d\n", pos);
    printf("Comparisons: %d\n", comparisons);

    return 0;
}

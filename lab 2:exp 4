#include <stdio.h>

void bubbleSort(int arr[], int n) {
    int i, j, temp, swapped;

    for (i = 0; i < n - 1; i++) {
        swapped = 0;

        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                swapped = 1;
            }
        }

        if (swapped == 0)
            break;   // Stops early if already sorted
    }
}

void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

int main() {
    int arr1[] = {64, 25, 12, 22, 11};
    int arr2[] = {29, 10, 14, 37, 13};
    int arr3[] = {3, 5, 2, 1, 4};
    int arr4[] = {1, 2, 3, 4, 5};
    int arr5[] = {5, 4, 3, 2, 1};

    int n1 = 5, n2 = 5, n3 = 5, n4 = 5, n5 = 5;

    printf("Test Case 1 Sorted: ");
    bubbleSort(arr1, n1);
    printArray(arr1, n1);

    printf("Test Case 2 Sorted: ");
    bubbleSort(arr2, n2);
    printArray(arr2, n2);

    printf("Test Case 3 Sorted: ");
    bubbleSort(arr3, n3);
    printArray(arr3, n3);

    printf("Test Case 4 Sorted: ");
    bubbleSort(arr4, n4);
    printArray(arr4, n4);

    printf("Test Case 5 Sorted: ");
    bubbleSort(arr5, n5);
    printArray(arr5, n5);

    return 0;
}

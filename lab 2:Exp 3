#include <stdio.h>

void bubbleSort(int arr[], int n) {
    int i, j, temp;
    int swapped; // flag to check if swapping happened

    for (i = 0; i < n - 1; i++) {
        swapped = 0;
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                swapped = 1;
            }
        }
        // if no swapping happened, list is already sorted
        if (swapped == 0)
            break;
    }
}

void printArray(int arr[], int n) {
    printf("[");
    for (int i = 0; i < n; i++) {
        printf("%d", arr[i]);
        if (i < n - 1) printf(", ");
    }
    printf("]\n");
}

int main() {
    int arr[] = {5, 1, 4, 2, 8};
    int n = 5;

    printf("Before Sorting: ");
    printArray(arr, n);

    bubbleSort(arr, n);

    printf("After Sorting: ");
    printArray(arr, n);

    return 0;
}
